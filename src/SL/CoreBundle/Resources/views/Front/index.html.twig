{% extends 'SLCoreBundle:FrontEnd:frontEnd.html.twig' %}

{% block body %}
    <h3 class="page-header">{{ object.displayName }}</h3>

    <ul class="list-inline">
        <li>
            <a class="btn btn-primary btn-sm" data-toggle="modal" href="{{ path('front_new', { 'object_id' : object.id }) }}" data-target="#">
                <span class="fa fa-plus"></span>  
            </a>
        </li>
    </ul>

    <table class="table table-bordered table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>{{ 'displayName'|trans }}(affich√©)</th>
                {% for property in properties %}
                    <th>{{ property.displayName |trans }}</th>
                {% endfor %}
                <th> {{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody id="{{ object.technicalName }}_table_body">
            {% for entity in entities %}
                {% include "SLCoreBundle:Front:entityTableRow.html.twig" with {
                'object' : object,
                'entity' : entity,
                'properties' : properties
                } only %} 
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
