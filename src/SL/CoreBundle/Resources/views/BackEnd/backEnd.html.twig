{% extends '::base.html.twig' %}

{% block header %}
	{{ parent() }}

	{# Menu section #}
	{% block top_menu %}
	    {% embed '@MopaBootstrap/Navbar/navbar.html.twig' with {fixedTop: true, staticTop: false, inverse: true}  %}
	        {% block brand %}
	            <a class="navbar-brand" href="#">{{ 'main_application.name'|trans }}</a>
	        {% endblock %}
	        {% block menu %}
	            {{ mopa_bootstrap_menu('SLCoreBundle:Builder:backEndMenu') }}
	        {% endblock %}
	    {% endembed %}
	{% endblock %}
{% endblock %}


{% block nav %}
	{{ parent() }}
	<div class="panel-full-screen panel panel panel-default">
  		<div class="panel-body">
			<div id="jstree">
				{{ mopa_bootstrap_menu('SLCoreBundle:Builder:treeBackEndMenu') }}
			</div>
		</div>
	</div>
{% endblock %}

{% block sections %}
    {{ parent() }}
    <div class="panel-full-screen panel panel-default">
  		<div class="panel-body">
    		<section id="backEndSection">
    		</section>
    	</div>
    </div>
{% endblock %}

{% block footer %}
	{{ parent() }}
	{{ 'back_end.footer.title'|trans }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% include 'SLCoreBundle:BackEnd:backEnd.js.html.twig' only %} 
{% endblock %}