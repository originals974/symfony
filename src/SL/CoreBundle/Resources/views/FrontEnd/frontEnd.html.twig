{% extends '::base.html.twig' %}

{% block header %}
	{{ parent() }}

	{# Menu section #}
	{% block top_menu %}
	    {% embed '@MopaBootstrap/Navbar/navbar.html.twig' with {fixedTop: true, staticTop: false, inverse: true}  %}
	        {% block brand %}
	            <a class="navbar-brand" href="#">{{ 'main_application.name'|trans }}</a>
	        {% endblock %}
	        {% block menu %}
	            {{ mopa_bootstrap_menu('SLCoreBundle:Builder:frontMenu') }}
	        {% endblock %}
	    {% endembed %}
	{% endblock %}
{% endblock %}


{% block nav %}
	{{ parent() }}
	{% embed '@MopaBootstrap/Navbar/navbar.html.twig' with {fixedTop: false, staticTop: false, inverse: false}  %}
        {% block menu %}
        	<div class="col-md-3">
            	{{ mopa_bootstrap_menu('SLCoreBundle:Builder:lateralFrontEndMenu') }}
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block sections %}
	{{ parent() }}
	<div class="row">
        <!--Search section-->
        <section class="well col-md-6">
            {% block search_section %}{% endblock %}
        </section>

        <!--Tool section-->
        <section class="well col-md-6">
            {% block features_section %}
            	<div id="features"> </div>
            {% endblock %}
        </section>
    </div>
{% endblock %}

{% block footer %}
	{{ parent() }}
	{{ 'frontEnd'|trans }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'SLCoreBundle:FrontEnd:FrontEnd.js.twig' only %} 
{% endblock %}
