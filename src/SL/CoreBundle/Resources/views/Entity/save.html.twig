{% from 'MopaBootstrapBundle::macros.html.twig' import label %}
{% extends "SLCoreBundle::modalContent.html.twig" %}

{% set formFullName = form.vars.full_name|replace({"sl_core_": ""}) %}
{% set formMethod = form.vars.method|lower %}
{% set formMethodLabel = formMethod ~ '.label' %}

{% set delete_message = formFullName ~ '.' ~ formMethod ~ '.message' %}

{% block modal_title %}
	<h2>{{ entityClass.displayName }} | <small>{{ formMethodLabel|trans }}</small></h2>
{% endblock %}

{% block modal_body %}

	{% if form.vars.method == 'DELETE' %}
		<div class="text-center">
			{{ delete_message|trans({'%displayName%': entity.displayName})}}
		</div>
	{% endif %}

	<br/>

	{{ form(form) }}
{% endblock %}

{% block modal_footer %}{% endblock %}