<div class="panel-group" id="search_result_panel">
  {% for entityClassArray in entityClassesArray %}
    {% set entityClass = entityClassArray['entity_class'] %}
    {% set nbResults = entityClassArray['nb_results'] %}

    {% if nbResults > 50 %}
      {% set nbResults = '50 +' %}
    {% endif %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#search_result_panel" href="#{{ entityClass.technicalName }}">
            <span class="fa {{ entityClass.icon }}"></span> 
            {{ entityClass.displayName }} ({{ nbResults }}) {{ entityClass.deletedAt is not null ? 'deleted'|trans }}
          </a>
        </h4>
      </div>
      <div id="{{ entityClass.technicalName }}" class="panel-collapse collapse {% if loop.first %}in{% endif %}">
        <div class="panel-body">
          <div id="jstree_{{ entityClass.technicalName }}"></div>
        </div>
      </div>
    </div>

  {% endfor %}
</div>