{% if object.properties|length == 0 %}
    <div class="text-center">
        <i>{{ 'property.create.description'|trans }}</i>
        <br/>
        <a title="{{ 'property.add'|trans }}" class="btn btn-default btn-xs" data-toggle="modal" href="{{ path('property_new', { 'id': object.id }) }}" data-target="#">
            <span class="fa fa-plus"></span>  
        </a>   
    </div>
{% else %}
    <table class="table table-striped table-condensed table-hover table-bordered">
        <thead>
            <tr>
                <th style="width:60px;">
                    <a title="{{ 'property.add'|trans }}" class="btn btn-default btn-xs" data-toggle="modal" href="{{ path('property_new', { 'id': object.id }) }}" data-target="#">
                        <span class="fa fa-plus"></span>  
                    </a>
                </th>
                <th style="width:60px;">{{ 'isEnabled'|trans }}</th>
                <th style="width:60px;">{{ 'isRequired'|trans }}</th>
                <th>{{ 'displayName'|trans }}</th>
                <th>{{ 'fieldType'|trans }}</th>
                <th>{{ 'relation'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for property in object.properties %}
                <tr>
                    <td>
                        <a title="{{ 'property.delete'|trans }}" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#" href="{{ path('property_remove', { 'id': property.id }) }}" >
                            <span class="fa fa-times"></span>        
                        </a> 
                    </td>
                    <td>
                        <input title="{{ 'property.enable.disable'|trans }}" type="checkbox" name="isEnabled" value="isEnabled" {% if property.isEnabled %}checked{% endif %} ajax-action={{ path('property_update_checkbox', { 'id': property.id }) }}>
                    </td>
                    <td>
                        <input title="{{ 'property.make.require'|trans }}" type="checkbox" name="isRequired" value="isRequired" {% if property.isRequired %}checked{% endif %} ajax-action={{ path('property_update_checkbox', { 'id': property.id }) }}>
                    </td>
                    <td>
                        <a title="{{ 'property.update'|trans }}" data-toggle="modal" data-target="#" href="{{ path('property_edit', { 'id': property.id }) }}">
                            {{ property.displayName }}
                        </a>
                    </td>
                    <td>
                        {{ property.fieldType.displayName }}
                    </td>
                    <td>
                        {% if property.fieldType.technicalName == 'entity' %}
                            {% if property.isMultiple %}
                                {% set relation_type='many' %}
                            {% else %}
                                {% set relation_type='one' %}
                            {% endif %}

                            <b><i>{{ 'property.relation.description'|trans({
                            '%current_object%': property.object.displayName,
                            '%relation_type%' : relation_type|trans,
                            '%linked_object%': property.targetObject.displayName
                            })}}</i></b>
                        {% endif %}
                        {% if property.fieldType.technicalName == 'data_list' %}
                            <b><i>{{ 'data_list.relation.description'|trans ({
                            '%current_object%': property.object.displayName,
                            '%linked_list%' : property.datalist.displayName
                            })}}</i></b>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}