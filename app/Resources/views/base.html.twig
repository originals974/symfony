<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        {# Title section #}
        <title>
            {% block head_title %}
                {{ 'application.name'|trans }}
            {% endblock %}
        </title>
        
        {# CSS section #}
        {% block stylesheets %}
            <!--Assetic CSS-->
            {% stylesheets '@jquery_ui_css' '@bootstrap_css' '@bootstrap_theme_css' '@fontawesome_css' '@bootstrap_modal_css'  '@js_tree_css' '@bootstrap_icon_picker_css' '@custom_css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}

            <!--Favicon-->
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}
    </head>

    <body class="page-container">
        <div id="section">
            <!--Header section-->
            <header class="row"> 
                {% block header %}{% endblock %}
            </header>

            <div class="row">
                <!--Navigation section-->
                <nav class="col-md-3">
                    {% block nav %}{% endblock %}
                </nav>

                <!--Main section-->
                <section class="col-md-9">
                    {% block sections %}{% endblock %}
                </section>
            </div>

            <!--Footer section-->
            <footer class="row">
                <nav class="navbar navbar-default navbar-fixed-bottom">
                    <div class="navbar-inner navbar-content-center">
                        {% block footer %}
                            <p class="text-muted credit text-center">{{ app_version }}</p>
                        {% endblock %}
                    </div>
                </nav>
            </footer>

            <!--Modal-->
            <div id="ajax-modal" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false" style="display:none;"></div>

            <!--Javascript section-->
            {% block javascripts %}
                <!--Assetic JS-->
                {% javascripts '@jquery_js' '@jquery_ui_js' '@bootstrap_js' '@mopabootstrap_collection_js' '@bootstrap_modal_js' '@bootstrap_icon_picker_js' '@js_tree_js' '@fos_js_routting_js' '@insert_at_caret_js' '@custom_js' %}
                    <script src="{{ asset_url }}"></script>
                {% endjavascripts %}

                <!--FosJsRouting-->
                <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

                <!--Specific JS-->
                {% include '::base.js.html.twig' only %} 
            {% endblock %}
        </div>
    </body>
</html>
